{
  "name": "plataforma-de-juegos",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "server": "node server.js"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "expo": "~54.0.12",
    "expo-status-bar": "~3.0.8",
    "express": "^5.1.0",
    "mongoose": "^8.19.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "expo": {
    "name": "Plataforma-De-Juegos",
    "slug": "Plataforma-De-Juegos",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
